<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="coreRes" type="com.arcbees.geekette.client.resources.Resources"/>

    <g:PopupPanel styleName="{coreRes.styles.popup}" autoHideEnabled="true">
        <g:HTMLPanel>
            <div class="{coreRes.styles.popupWrapper}">
                <div class="{coreRes.styles.popupPrice}">
                    <div class="{coreRes.styles.price} {coreRes.styles.popupCost}">55$</div>
                    <p>par billet</p>
                </div>
                <h2>Achat<br/>de billets</h2>
                <p>J'achète <input class="{coreRes.styles.nbTickets}"/> billets</p>
                <p class="{coreRes.styles.popupTotal}">Ce qui vous fait un TOTAL de <span class="{coreRes.styles.txtPink}">XXX$ CAD</span></p>
                <div class="{coreRes.styles.error}">
                    <p>Courriel non valide</p>
                </div>
                <div>
                    <input placeholder="Votre charmant NOM"/>
                    <input placeholder="Votre courriel"/><i class="{coreRes.styles.iconBomb}"/>
                    <input placeholder="Merci de confirmer votre courriel"/>
                </div>
            </div>
            <div class="{coreRes.styles.bgPink}">
                <div class="{coreRes.styles.popupWrapper}">
                    <div class="{coreRes.styles.clearfix}">
                        <p>Votre numéro de carte <input class="{coreRes.styles.numCarte} {coreRes.styles.right}"/></p>
                    </div>
                    <div class="{coreRes.styles.clearfix}">
                        CVC <input class="{coreRes.styles.small}"/>
                        <div class="{coreRes.styles.right}">
                            Expiration <input class="{coreRes.styles.small}"/>  /  <input class="{coreRes.styles.small}"/>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="{coreRes.styles.popupWrapper}">
                <button class="{coreRes.styles.ticket}">achetez</button>
                <div class="{coreRes.styles.annuler} {coreRes.styles.right}">
                    annuler
                </div>
            </footer>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
